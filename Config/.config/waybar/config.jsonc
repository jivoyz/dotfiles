{
  "layer": "top", // Waybar at top layer
  "position": "top", // Waybar position (top|bottom|left|right)
  "height": 30, // Waybar height (to be removed for auto height)
  // "width": 1280, // Waybar width
  "spacing": 4, // Gaps between modules (4px)
  "reload_style_on_change": true,
  // Choose the order of the modules
  "modules-left": ["hyprland/workspaces", "tray", "group/cpu_ram"],
  "modules-center": ["custom/spotify"],
  "modules-right": ["group/hardware", "group/info"],

  "group/info": {
    "orientation": "horizontal",
    "modules": ["hyprland/language", "clock"],
  },

  "group/hardware": {
    "orientation": "horizontal",
    "modules": ["custom/updates", "pulseaudio", "pulseaudio#microphone"],
  },

  "group/cpu_ram": {
    "orientation": "horizontal",
    "modules": ["cpu", "memory"],
  },

  "custom/spotify": {
    "exec": "/usr/bin/python3 ~/.config/hypr/scripts/mediaplayer.py --player spotify",
    "format": "ÔÜº {}",
    "return-type": "json",
    "on-click": "playerctl play-pause --player spotify",
    "on-click-right": "playerctl next --player spotify",
    "on-click-middle": "playerctl previous --player spotify",
    "on-scroll-up": "~/.config/hypr/scripts/changeVolume.sh up spotify",
    "on-scroll-down": "~/.config/hypr/scripts/changeVolume.sh down spotify",
    "max-length": 25,
    "escape": true,
    "tooltip": true,
  },

  "hyprland/workspaces": {
    "all-outputs": true,
  },

  "hyprland/window": {
    "format": "Û∞åΩ   {initialTitle}",
    "separate-outputs": true,
    "max-length": 48,
  },

  "idle_inhibitor": {
    "format": "{icon}",
    "format-icons": {
      "activated": "ÔÅÆ",
      "deactivated": "ÔÅ∞",
    },
  },
  "tray": {
    "icon-size": 18,
    "spacing": 10,
  },
  "clock": {
    "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
    "format": "Óº∑   {:%a %d %b   %H:%M}",
  },
  "cpu": {
    "format": "Ôíº   {usage}%",
    "tooltip": false,
  },
  "memory": {
    "format": "ÔÑµ   {}%",
  },
  "backlight": {
    // "device": "acpi_video1",
    "format": "{percent}% {icon}",
    "format-icons": ["Óéç", "Óèì", "Óèë", "Óèè", "Óèé", "Óèç", "Óèä", "Óèà", "Óéõ"],
  },
  "network": {
    // "interface": "wlp2*", // (Optional) To force the use of this interface
    "format-wifi": "Ôá´ ({signalStrength}%)",
    "format-ethernet": "Óºâ ",
    "tooltip-format": "Ôûñ {ifname} via {gwaddr}",
    "format-linked": "Ôûñ (No IP)",
    "format-disconnected": "Û∞ñ™",
    "format-alt": "{ifname}: {ipaddr}",
  },

  "hyprland/language": {
    "format": "ÔÇ¨   {}",
    "format-en": "US",
    "format-ru": "RU",
    "format-uk": "UA",
  },

  "pulseaudio": {
    "scroll-step": 5, // %, can be a float
    "format": "{icon} {volume}",
    "format-bluetooth": "{volume} {icon}Ôäî {format_source}",
    "format-bluetooth-muted": "Ôö© {icon}Ôäî {format_source}",
    "format-muted": "Ôë¶   Muted",
    "format-source": "ÔÑ∞ {volume}",
    "format-source-muted": "ÔÑ± ",
    "format-icons": {
      "headphone": "ÔÄ• ",
      "hands-free": "Ôñê",
      "headset": "Ôñê",
      "phone": "ÔÇï",
      "portable": "ÔÇï",
      "car": "ÔÜπ",
      "default": ["ÔÄ¶", "ÔÄß  ", "ÔÄ®   "],
    },
    "on-click": "pavucontrol"
  },


  "pulseaudio#microphone": {
    "format": "{format_source} {source_volume}",
    "rotate": 0,
    "format-source": "ÔÑ∞ ",
    "format-source-muted": "ÔÑ±   ",
    "on-click": "pavucontrol -t 4",
    //"on-click-middle": "pamixer --sou",
    "on-scroll-up": "~/.config/hypr/scripts/changeVolume.sh up microphone",
    "on-scroll-down": "~/.config/hypr/scripts/changeVolume.sh down microphone",
    "on-click-right": "~/.config/hypr/scripts/changeVolume.sh mute microphone",
    "tooltip-format": "{format_source} {source_desc} // {source_volume}%",
    "scroll-step": 5
},

  "custom/power": {
    "format": "ÔÄë",
    "on-click": "~/.config/hypr/scripts/rofiPowerMenu.sh",
  },

  "custom/updates": {
    "format": "{}  {icon}",
    "return-type": "json",
    "format-icons": {
        "has-updates": "Û∞èó",
        "updated": "Û∞èó"
    },
    "exec-if": "which waybar-module-pacman-updates",
    "exec": "waybar-module-pacman-updates --interval-seconds 5 --network-interval-seconds 300"
  },

  "custom/logo": {
    "format": "Ôåû",
  },

  // "custom/media": {
  //     "format": "{icon} {}",
  //     "return-type": "json",
  //     "max-length": 40,
  //     "format-icons": {
  //         "spotify": "ÔÜº",
  //         "default": "üéú"
  //     },
  //     "escape": true,
  //     "exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null" // Script in resources folder
  //     // "exec": "$HOME/.config/waybar/mediaplayer.py --player spotify 2> /dev/null" // Filter player based on name
  // }
}
